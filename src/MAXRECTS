//	Algo MaxRects
	
	public MAXRECTS (Tableau de Rectangles)
	{
	Liste_Surface = {surface totale du conteneur};
	for(i=1;i<nombreObjet;i++) {
		if((Volume.hauteur < Liste_Surface) and (Volume.largeur < Liste_Surface))
			S = Volume[i];
		else
			if((Volume.hauteur > Liste_Surface) and (Volume.largeur > Liste_Surface))
			System.out.println("Impossible de mettre le rectangle !");
			else {
//	Choisir l'orientation de la pièce(R) 
			S_rectangle = {placer en bas à gauche};	
			S2=Liste_Surface.hauteur - Volume.hauteur;
			S3=Liste_Surface.largeur - Volume.largeur;
			Liste_Surface = S2 + S3 + Liste_Surface - R;
			}
		for("Pour chaque Surface S_libre dans Liste_Surface") {
			New_Liste_Surface = Couper_Surface_en_suivant_rectangle(S_libre, S_rectangle);
			Liste_Surface = Liste_Surface + New_Liste_Surface - S_libre;
		}
		for("Pour chaque chaque surface S1 dans Liste_Surface") {
			for("Pour chaque chaque surface S2 dans Liste_Surface") {
				if(S1 > S2)
					Liste_Surface = Liste_Surface - S2;
			}
		}
	}	
	}	
